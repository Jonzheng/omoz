    transform: rotateX(180deg);
    backface-visibility:hidden;
    -webkit-backface-visibility:hidden;	/* Chrome å’Œ Safari */
    perspective: 5555rpx;
    perspective-origin: 80% 2220rpx;
}

.step{
    display:flex;
    flex: none;
    background-color:#dedede;
    width:76rpx;
    height:76rpx;
    border:1px solid #999;
    box-shadow:0px 0px 10rpx #666;
    border-radius: 5rpx;
    justify-content:center;
    align-items:center;
    font-weight: bold;
    font-size: 16px;
    color: #555;
}

.step-color{
    color: #337ab7;
}

.step-hover{
    transform: scale(1.05, 1.05);
    box-shadow: 0 0 20rpx rgba(0, 0, 255, 0.6);
}

.step-active{
    transform: scale(1.06, 1.06);
    box-shadow: 0 0 20rpx rgba(0, 0, 255, 0.8);
}

.step-combo{
    transform: scale(1.1, 1.1);
    box-shadow: 0 0 20rpx rgba(255, 0, 0, 0.616);
}

.step-on{
    animation: ke-on 0.6s ease-in;
}

.step-off{
    animation: ke-off 0.6s ease-in;
}

@keyframes ke-on{
    0%{
        transform: rotate(0deg);
    }
    50%{
        opacity: 0.8;
    }
    100%{
        transform: rotate(360deg);
    }
}

@keyframes ke-off{
    0%{
        transform: rotate(0deg);
    }
    50%{
        opacity: 0.8;
    }
    100%{
        transform: rotate(-360deg);
    }
}

@keyframes ke-show{
    0%{
        transform: rotateX(180deg);
    }
    100%{
        transform: rotateX(0deg);
    }
}

@keyframes ke-hide{
    0%{
        transform: scale(1, 1) rotateX(0deg);
    }
    50%{
        transform: scale(1, 1) rotateX(0deg);
    }
    100%{
        transform: scale(0.2, 0.2) rotateX(180deg);
    }
}