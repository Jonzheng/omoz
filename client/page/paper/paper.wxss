.content-paper{
    border-top:5rpx solid #5bc0de;
}

.paper-image{
    margin-right:.2em;
    width:192rpx;
    height:120rpx;
    text-align:center;
}

.box-paper{
    display:flex;
    padding:15px;
}

.box-paper-info{
    flex: 1;
}

.box-title{
    margin-bottom: 6rpx;
    color: #337ab7;
    font-weight: bold;
    font-size:16px;
    width:auto;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    word-wrap:normal;
    word-wrap:break-word;
    word-break:break-all;
}

.box-desc{
    display: inline-block;
    width:70%;
    color:#999;
    font-size:14px;
    overflow:hidden;
    text-overflow:ellipsis;
}

.box-level{
    display: inline-block;
    width:30%;
    color:#999;
    font-size:14px;
    overflow:hidden;
    text-overflow:ellipsis;
}

.border-paper{
    border-bottom:1rpx solid #5bc0de;
    margin-left:10px;
    margin-right:10px;
}