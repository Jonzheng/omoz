.content-paper{
    border-top:5rpx solid #5bc0de;
    position: fixed;
}

.box-title{
    text-align: center;
    color: #666;
    padding:24rpx;
    margin-bottom: 6rpx;
    font-weight: bold;
    font-size:18px;
    overflow:hidden;
}

.border-title{
    border-bottom:1rpx solid #ccc;
    margin-left:10rpx;
    margin-right:10rpx;
}

.box-label{
    margin-left: 6rpx;
    display: inline-block;
    width: 122rpx;
    color: #bbb;
}

.paper-label{
    margin-left: 6rpx;
    color: #bbb;
}

.box-value{
    display: inline-block;
    width: 160rpx;
    color: #999;
}

.box-cate{
    margin-bottom: 16rpx;
}

.content-cate{
    color: #999;
    border-left:6rpx solid #ddd;
    margin-left: 70rpx;
    padding-left: 12rpx;
}

.content-text{
    white-space: pre-wrap;
    word-wrap: break-word;
}

.btn-start-paper{
    width:98%;
    border:1px solid #7ed5f0;
    color: #7ed5f0;
}

.fixed-bottom{
    font-weight: bold;
    position:fixed;
    left:0;
    right:0;
    bottom:0;
}

.box-switch{
    border-top:1rpx solid #ccc;
    padding:16rpx 30rpx;
    position:relative;
    display:flex;
}

.box-history{
    border-top:1rpx solid #ccc;
    border-bottom:3rpx solid #ccc;
    padding:24rpx 30rpx;
    position:relative;
    display:flex;
    color: #999;
    font-size:16px;
}

.god-switch{
    width: 120rpx;
}

.god-label{
    display: inline-block;
    width: 180rpx;
    color: #999;
    font-size:16px;
}

.god-value{
    padding-left: 6rpx;
    padding-top: 6rpx;
    display: inline-block;
    width: 70%;
    color: #bbb;
    font-size:14px;
}

.box-result{
    width: 750rpx;
}

.box-rate{
    border-top: 6rpx solid #bbb;
    margin-top: 30rpx;
    padding-top: 15rpx;
}

.box-iriza{
    background: #777;
}

.image-iriza{
    position: relative;
    left: 620rpx;
    top: 13rpx;
}

.in-iriza{
    position: relative;
    left: 110rpx;
    top: 13rpx;
    transition: all 0.2s ease-out;
}

.line-box{
    display: flex;
    align-items: center;
}

.que-label{
    margin-right: 8rpx;
    color: #bbb;
}

.rate-bar-box{
    display: flex;
    width: 400rpx;
    background-color: #fff;
    height: 6rpx;
    margin: 0 20rpx;
}

.bar-right{
    background-color: #3498db;
    box-shadow: 0 0 10rpx #3498db;
    margin-right: 3rpx;
}

.bar-wrong{
    background-color: #eee;
    box-shadow: 0 0 10rpx #fff;
}

.que-right{
    color: #3498db;
}

.que-right::after{
    content: '/';
    color: #bbb;
}

.que-total{
    color: #bbb;
}