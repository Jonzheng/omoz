.content-paper{
    border-top:5rpx solid #5bc0de;
    color: #666;
}

.que-title{
    margin-top: 36rpx;
    border-top: 1rpx solid #bbb;
    padding:15rpx 15rpx;
    width: 100%;
    height: 3.2em;
}

.my-radio{
    margin: 10rpx 10rpx;
    display: flex;
    justify-content:center;
    align-items: center;
    height: 40rpx;
    width: 40rpx;
    border: 1rpx solid #bbb;
    box-shadow: 0 0px 20rpx #eee inset;
    border-radius: 40rpx;
}

.my-radio-checked{
    margin: 10rpx 10rpx;
    display: flex;
    justify-content:center;
    align-items: center;
    height: 40rpx;
    width: 40rpx;
    border: 1rpx solid #3498db;
    box-shadow: 0 0px 20rpx #fff inset;
    border-radius: 40rpx;
}

.my-radio-center{
    height: 20rpx;
    width: 20rpx;
    background-color:#3498db;
    box-shadow: 0 0px 20rpx #fff;
    border-radius: 20rpx;
}
