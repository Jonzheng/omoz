
.box-info{
    border-top: 1px #ccc solid;
    border-bottom: 1px #ccc solid;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
    height:120rpx;
}

.top-box{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx 20rpx;
}

.top-label{
    font-weight: bold;
    color: #999;
    margin-right: 20rpx;
}

.top-value{
    font-size: 1.5em;
    font-weight: bold;
    color: #337ab7;
    margin-right: 20rpx;
}

.box-cube{
    position: relative;
    top: 10rpx;
    width:98%;
    margin: 0 auto;
    height:500rpx;
    border-top: 6rpx #666 solid;
    border-bottom: 6rpx #666 solid;
}

.cube-wrap {
    perspective: 1555rpx;
    perspective-origin: 50% 222rpx;
}

.cube {
    position: relative;
    top: 100rpx;
    width: 300rpx;
    margin: 0 auto;
    transform-style: preserve-3d;
    animation: cube-spin 8s infinite linear;
}

.cube-view {
    position: absolute;
    width: 300rpx;
    height: 300rpx;
    background: rgba(222,222,222,0.8);
    box-shadow: inset 0 0 30px rgba(125,125,125,0.8);
    font-size: 20px;
    text-align: center;
    line-height: 300rpx;
    color: rgba(0,0,0,0.5);
    font-family: sans-serif;
    text-transform: uppercase;
}

.back-pane {
    transform: translateZ(-150rpx) rotateY(180deg);
}
.right-pane {
    transform:rotateY(-270deg) translateX(150rpx);
    transform-origin: top right;
}
.left-pane {
    transform:rotateY(270deg) translateX(-150rpx);
    transform-origin: center left;
}
.top-pane {
    transform:rotateX(-90deg) translateY(-150rpx);
    transform-origin: top center;
}
.bottom-pane {
    transform:rotateX(90deg) translateY(150rpx);
    transform-origin: bottom center;
}
.front-pane {
    transform: translateZ(150rpx);
}

@keyframes cube-spin {
    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(360deg); }
}

@keyframes cube-spin-1 {
    5% { transform: rotateY(90deg); }
    25% { transform: rotateY(90deg); }
    30% { transform: rotateY(180deg); }
    50% { transform: rotateY(180deg); }
    55% { transform: rotateY(270deg); }
    75% { transform: rotateY(270deg); }
    80% { transform: rotateY(360deg); }
    100% { transform: rotateY(360deg); }
}
