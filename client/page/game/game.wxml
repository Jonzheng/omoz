<view class="page">
    <view class='title-line'></view>
    <view class='title-1' bindtap="initGame">「50_Game」</view>
    <view class='title-line'></view>

    <view class='box-body'>
        <view class="box-link">

            <block wx:for="{{fields}}" wx:key="mkey" wx:for-index="idx">
                <template is="temp-row" data="{{item,idx}}"/>
            </block>

        </view>
    </view>
</view>

<template name="temp-row">
    <view class="box-row">
        <block wx:for="{{item}}" wx:key="mkey" wx:for-index="idx">
            <view class='step-out' data-row="{{item.row}}" data-col="{{item.col}}" data-roma="{{item.roma}}"
                data-status="{{item.status}}" bindtap="goLink">
                <view class='step {{item.on ? "step-on":"step-off"}} {{item.status == 0 ? "step-boom":""}} {{item.type == "kata" ? "step-kata":""}} {{item.active ? "step-active":""}}'
                hover-class='step-hover' >{{item.status == 0 ? "":item.word}}
                </view>
            </view>
        </block>
    </view>
</template>