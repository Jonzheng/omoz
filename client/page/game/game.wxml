<view class="page">
    <view class='title-line'></view>
    <view class='title-1'>「50_Game」</view>
    <view class='title-line'></view>

    <view class='box-body'>
        <view class="box-link">

            <block wx:for="{{fields}}" wx:key="mkey" wx:for-index="idx">
                <template is="temp-row" data="{{item,idx}}"/>
            </block>

        </view>
    </view>
</view>

<template name="temp-row">
    <view class="box-row">
        <block wx:for="{{item}}" wx:key="mkey" wx:for-index="idx">
            <view class="step-out" bindtap="goLink">
                <view class='step {{item.type == "kata" ? "step-kata":""}} {{item.active ? "step-active":""}}'
                data-row="{{item.row}}" data-col="{{item.col}}"
                data-roma="{{item.roma}}"
                hover-class='{{item.status == 1 ? "step-hover":""}}' >{{item.status == 0 ? "":item.word}}
                </view>
            </view>
        </block>
    </view>
</template>